                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CellRightAlign">
            <Setter Property="Control.HorizontalAlignment"
            Value="Right" />
        </Style>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
